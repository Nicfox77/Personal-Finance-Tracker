<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExpenseActivity">

    <View
        android:id="@+id/top_bg_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_design"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/expenseListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/light_gray"
        android:text="Add Expense"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/TransactionNameTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:text="Transaction Name"
        app:layout_constraintTop_toBottomOf="@+id/expenseListView"
        app:layout_constraintStart_toStartOf="@+id/TransactionNameEditTextView"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/TransactionNameEditTextView"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edit_text_border"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TransactionNameTitleTextView"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/TransactionAmountTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:text="Amount"
        app:layout_constraintTop_toBottomOf="@+id/TransactionNameEditTextView"
        app:layout_constraintStart_toStartOf="@id/TransactionAmountEditTextView"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/TransactionAmountEditTextView"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edit_text_border"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TransactionAmountTitleTextView"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/TransactionCategoryTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:text="Category"
        app:layout_constraintTop_toBottomOf="@+id/TransactionAmountEditTextView"
        app:layout_constraintStart_toStartOf="@id/TransactionCategoryEditTextView"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/TransactionCategoryEditTextView"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edit_text_border"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TransactionCategoryTitleTextView"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/TransactionDateTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_gray"
        android:text="Date"
        app:layout_constraintTop_toBottomOf="@+id/TransactionCategoryEditTextView"
        app:layout_constraintStart_toStartOf="@id/TransactionDateEditTextView"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/TransactionDateEditTextView"
        android:layout_width="275dp"
        android:layout_height="45dp"
        android:ems="10"
        android:background="@drawable/edit_text_border"
        android:inputType="textAutoCorrect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TransactionDateTitleTextView"
        android:layout_marginTop="3dp"/>

    <Button
        android:id="@+id/AddExpenseButton"
        android:textColor="@color/light_gray"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:text="Add Expense"
        android:layout_marginTop="45dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TransactionDateEditTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>