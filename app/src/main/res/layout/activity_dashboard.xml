<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashboardActivity">

    <View
        android:id="@+id/top_bg_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@drawable/bg_design"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/DashboardTitleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="@color/light_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="Welcome, admin02"/>

    <TextView
        android:id="@+id/TotalBudgetTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Total Budget"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray"
        android:background="@drawable/dashboard_bg_border"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/DashboardTitleView"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="40dp"/>

    <TextView
        android:id="@+id/ExpensesTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Expenses"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray"
        android:background="@drawable/dashboard_bg_border"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/TotalBudgetTextView"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="+/-"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/dark_gray"
        android:background="@drawable/dashboard_bg_border"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/ExpensesTextView"
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="40dp"/>

    <GridLayout
        android:id="@+id/MainGridView"
        android:layout_width="325dp"
        android:layout_height="210dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bg_view"
        android:layout_marginTop="-50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:columnCount="3"
        android:rowCount="2">

        <Button
            android:id="@+id/NewExpenseButton"
            android:layout_gravity="center"
            android:backgroundTint="@color/primary_blue"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="Add Expense"
            android:textSize="14sp"
            android:textColor="@color/light_gray"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_height="100dp"
            android:layout_width="100dp"
            />

        <Button
            android:layout_gravity="center"
            android:backgroundTint="@color/primary_blue"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:layout_columnWeight="1"
            android:textColor="@color/light_gray"
            android:text="View Expenses"
            android:textSize="14sp"
            android:layout_rowWeight="1"
            android:layout_height="100dp"
            android:layout_width="100dp"
            />

        <Button
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:backgroundTint="@color/primary_blue"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:text="Categories"
            android:textColor="@color/light_gray"
            android:textSize="12sp"
            android:layout_rowWeight="1"
            android:layout_height="100dp"
            android:layout_width="100dp"
            />

        <Button
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="View Expenses"
            android:textColor="@color/light_gray"
            android:backgroundTint="@color/primary_blue"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:textSize="14sp"
            android:layout_rowWeight="1"
            android:layout_height="100dp"
            android:layout_width="100dp"
            />

        <Button
            android:layout_gravity="center"
            android:layout_columnWeight="1"
            android:text="Budgets"
            android:textColor="@color/light_gray"
            android:backgroundTint="@color/primary_blue"
            android:background="@android:drawable/dialog_holo_light_frame"
            android:textSize="14sp"
            android:layout_rowWeight="1"
            android:layout_height="100dp"
            android:layout_width="100dp"
            />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>