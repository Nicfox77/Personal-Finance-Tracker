<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewExpensesActivity">

    <View
        android:id="@+id/top_bg_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/bg_design"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/CurrentExpensesLabelTextView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Current Expenses"
        android:paddingLeft="12dp"
        android:gravity="center_vertical"
        android:textColor="@color/light_gray"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/ExpenseListTextView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:textSize="18sp"
        android:text="Expense"
        android:layout_marginHorizontal="18dp"
        app:layout_constraintTop_toBottomOf="@+id/top_bg_view"/>
    <Button
        android:id="@+id/DoneButton"
        android:textColor="@color/light_gray"
        android:layout_width="275dp"
        android:layout_height="60dp"
        android:text="Done"
        android:layout_marginBottom="45dp"
        android:background="@android:drawable/dialog_holo_light_frame"
        android:backgroundTint="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>